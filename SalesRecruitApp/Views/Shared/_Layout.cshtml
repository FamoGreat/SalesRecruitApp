<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wellness Supplements</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <!-- FontAwesome for Social Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
   
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #f0f4f3; padding: 20px 0; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="#" style="color: #468585;">Wellness Supplements</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                 @*        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">Product Cart</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" aria-expanded="false">
                                Content Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="ProductBuddle" asp-action="Index">Product Bundle</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Product</a></li>
                                <li><a class="dropdown-item" asp-controller="Testimonial" asp-action="Index">Testimonial</a></li>
                                <li><a class="dropdown-item" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <style>
        /* Full-width navbar */
        .navbar {
            width: 100%; /* Full width */
            padding: 20px 0; /* Add extra height to navbar */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

        /* Branding colors */
        .navbar-light .navbar-nav .nav-link {
            color: #468585 !important; /* Use brand color for nav-links */
            font-weight: 500; /* Slightly bold to match brand consistency */
            transition: color 0.3s ease;
            padding: 10px 20px; /* Add padding for height and spacing */
        }

            /* Hover effect for nav-links */
            .navbar-light .navbar-nav .nav-link:hover {
                color: #2a6565 !important; /* Darker shade of brand color */
            }

        /* Brand name styling */
        .navbar-brand {
            font-family: 'Helvetica Neue', sans-serif; /* Clean, modern font */
            font-size: 1.7rem;
            letter-spacing: 0.05rem; /* Subtle spacing for premium look */
        }

        /* Dropdown hover */
        .dropdown:hover .dropdown-menu {
            display: block; /* Automatically open dropdown on hover */
            margin-top: 0; /* Prevent jump effect */
        }

        /* Dropdown styling */
        .dropdown-menu {
            border: none; /* Remove border for clean look */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Add shadow to dropdown */
        }

            /* Dropdown hover background */
            .dropdown-menu .dropdown-item:hover {
                background-color: #f0f4f3; /* Match the navbar background */
                color: #2a6565 !important; /* Darker brand color on hover */
            }
    </style>


    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-light py-4 mt-4">
        <div class="container">
            <div class="row">
                <!-- Column 1: Website Links -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-start text-uppercase">Quick Links</h5>
                    <ul class="list-unstyled text-start">
                        <li><a href="privacy-policy.html" class="text-light">Privacy Policy</a></li>
                        <li><a href="about.html" class="text-light">About Us</a></li>
                        <li><a href="contact.html" class="text-light">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Column 2: Social Media Links -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-start text-uppercase">Follow Us</h5>
                    <div class="text-start">
                        <a href="#" class="btn btn-outline-light me-2"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-light me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-light me-2"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light me-2"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Column 3: Newsletter Subscription -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-start text-uppercase">Subscribe to Our Newsletter</h5>
                    <form class="d-flex flex-column align-items-start">
                        <label for="newsletterEmail" class="form-label">Enter your email:</label>
                        <input type="email" class="form-control mb-2" id="newsletterEmail" placeholder="Enter your email">
                        <button type="submit" class="btn btn-outline-light">Subscribe</button>
                    </form>
                </div>
            </div>

            <!-- Horizontal Line -->
            <hr class="my-4">

            <!-- Copyright Notice -->
            <div class="row mt-4">
                <div class="col text-center">
                    <p>&copy; 2024 Wellness Supplements. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
