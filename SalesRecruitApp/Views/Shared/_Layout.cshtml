<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wellness Supplements</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="" asp-append-version="true" />
@*     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
 *@    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" />

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        .hero-bg {
            background-image: url('https://via.placeholder.com/1500x500');
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 100px 0;
        }

        .section-bg {
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #2c8d60;
            border-color: #2c8d60;
        }

            .btn-primary:hover {
                background-color: #247a4b;
                border-color: #247a4b;
            }

        .footer {
            background-color: #2c8d60;
            color: white;
        }

        .testimonial-carousel img {
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <header>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #2c8d60;">
            <div class="container">
                <a class="navbar-brand" href="#">Wellness Supplements</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="bundles.html">Product Bundles</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Content Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="ProductBuddle" asp-action="Index">Product Buddle</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Product</a></li>
                                <li><a class="dropdown-item"  asp-controller="Testimonial" asp-action="Index">Testimonial</a></li>
                                <li><a class="dropdown-item" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer py-4">
        <div class="container">
            <div class="row">
                <!-- Column 1: Website Links -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-start">Quick Links</h5>
                    <ul class="list-unstyled text-start">
                        <li><a href="privacy-policy.html" class="text-light">Privacy Policy</a></li>
                        <li><a href="about.html" class="text-light">About Us</a></li>
                        <li><a href="contact.html" class="text-light">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Column 2: Social Media Links -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-start">Follow Us</h5>
                    <div class="text-start">
                        <a href="#" class="btn btn-light me-2">Facebook</a>
                        <a href="#" class="btn btn-light me-2">Twitter</a>
                        <!-- Add more social media icons as needed -->
                    </div>
                </div>

                <!-- Column 3: Newsletter Subscription -->
                <div class="col-md-4 mb-3">
                    <h5 class="text-start">Subscribe to Our Newsletter</h5>
                    <form class="d-flex flex-column align-items-start">
                        <label for="newsletterEmail" class="form-label">Enter your email:</label>
                        <input type="email" class="form-control mb-2" id="newsletterEmail" placeholder="Enter your email">
                        <button type="submit" class="btn btn-light">Subscribe</button>
                    </form>
                </div>
            </div>

            <!-- Horizontal Line -->
            <hr class="my-4">

            <!-- Copyright Notice -->
            <div class="row mt-4">
                <div class="col text-center">
                    <p>&copy; 2024 Wellness Supplements. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
