@model FAQViewModel

<partial name="_Notification" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card bg-light mb-3" style="width: 60rem;">
        <div class="card-header">Edit FAQ</div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input asp-for="FAQ.Id" type="hidden" />

                <fieldset>
                    <div class="form-group mb-3">
                        <label asp-for="FAQ.ProductBuddleId" class="form-label"></label>
                        <select asp-for="FAQ.ProductBuddleId" asp-items="@Model.ProductBundleList" class="form-select">
                            <option value="" disabled selected>--Select Product Bundle--</option>
                        </select>
                        <span asp-validation-for="FAQ.ProductBuddleId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FAQ.Question"></label>
                        <input asp-for="FAQ.Question" class="form-control" />
                        <span asp-validation-for="FAQ.Question" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FAQ.Answer"></label>
                        <textarea asp-for="FAQ.Answer" class="form-control"></textarea>
                        <span asp-validation-for="FAQ.Answer" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4">Save Changes</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
